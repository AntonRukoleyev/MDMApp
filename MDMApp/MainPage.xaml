<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDMApp.MainPage"
             Title="MDM App">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Сведения об устройстве" FontSize="24" />
        <Label x:Name="DeviceInfoLabel" FontSize="14" />

        <Button Text="Обновить сведения" Clicked="OnUpdateDeviceInfo" />

        <Label Text="Местоположение" FontSize="24" />
        <Button Text="Получить местоположение" Clicked="OnGetLocation" />
        <Label x:Name="LocationLabel" FontSize="14" />

        <Label Text="Камера" FontSize="24" />
        <Button Text="Включить камеру" Clicked="OnEnableCamera" />
        <Button Text="Отключить камеру" Clicked="OnDisableCamera" />
    </VerticalStackLayout>
</ContentPage>
